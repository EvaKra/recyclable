
<div class="container-index">
  <ul class= "navbar-recyclable">
    <li style="padding-top: 12px; padding-right: 10px;">
      <%= link_to "Back", root_path(current_user) %></li>
    <li><%= link_to image_tag('main-logo.png'), user_path(current_user), class: "logo-navbar"%></li>
  </ul>

  <div class="search-container">
    <div class="textbox">
     Search any item below to find out information on its recyclability
    </div>
    <div class="consumerheading">
     <p class="m-0"> Let's sort it out!</p>
    </div>
    <div class="background3">
      <div class="youritem">
        <%= form_tag products_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "What's your item?"
          %>
          <div class="youritembtn">
            <%= submit_tag "Search", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
 <p><%= link_to "Sign out", destroy_user_session_path, method: :delete %></p>

