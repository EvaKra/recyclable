<div class="container-index">
  <%= render "shared/navbar"%>


  <div class="search-container">
  <h2>My favourites</h2>
    <% @user.favorites.each do |favorite|%>
      <div class="card-box">
        <div class="images"> <%= cl_image_tag favorite.product.photo.key, height: 100, width: 100, crop: :fill %></div>
        <% if favorite.product&.fully_recyclability.round == 100 %>
          <div style="font-size: 30px; color: green; padding-top: 7px; padding-right: 7px;">
            <i class="far fa-check-circle"></i>
          </div>
        <% elsif favorite.product&.fully_recyclability.round == 0 %>
          <div style="font-size: 30px; color: red; padding-top: 7px; padding-right: 7px;">
            <i class="fas fa-exclamation-circle"></i>
          </div>
        <%else%>
          <div style="font-size: 30px; color: orange; padding-top: 7px; padding-right: 7px;">
            <i class="fas fa-exclamation-circle"></i>
          </div>
        <%end%>
        <div class="text">
          <%= link_to favorite.product.name, product_path(favorite.product_id)%>
        </div>
      </div>
    <%end%>


    <%
=begin%>
 <div class="textbox">
      Search any item below to find out information on its recyclability
    </div>
    <div class="consumerheading">
     <p class="m-0"> Let's sort it out!</p>
    </div>
    <div class="background3">
      <div class="youritem">
        <%= form_tag products_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "What's your item?"
          %>
          <div class="youritembtn">
            <%= submit_tag "Search", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="signoutbtn">
 <p><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "bizi" %></p> 
<%
=end%>
</div>
