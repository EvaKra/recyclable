

<div class="sign-in" style="background-image: url(<%=  asset_path('signin.png') %>); background-size: cover; background-position: center; height: 100vh; display: flex; flex-direction: column; justify-content: center;" >

  <div class="dh2">
  <h2>Log in</h2>
</div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
  <div class="container">
    <%= render "devise/shared/links" %>
  </div>
</div>
