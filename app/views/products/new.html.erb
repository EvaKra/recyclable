<div class="container">

<%= simple_form_for [@product] do |f| %>
  <%= f.input :name %>
  <%= f.input :category, collection: Product.pluck(:category).uniq %>
  <%= f.input :photo %>
  <%= f.association :materials, multiple: true, collection: Material.all.map { |m| [ "#{m.name} - #{m.category}", m.id ] } %>
  <%= f.submit %>
<% end %>


<%= link_to "back", user_path(current_user) %>
</div>

