<div style="background-image: url(<%= image_path 'sign_in.jpg' %>); background-size: cover; background-position: center; height: 100vh">
  <div class="uselessback">
  </div>
<div class="container">

   <div class="heading5">
  <h5> We found <%= @products.count %> products for you!</h5>
    </div>
  <% @products.each do |product| %>

  <div class="box">
    <div class="images"><%= cl_image_tag product.photo.key, height: 120, width: 120, crop: :fill %></div>
      <div class="text"><p><%= link_to product.name, product_path(product)%></p> </div>
    </div>
  <% end %>


</div>
  <h5><%=link_to "make another search", user_path(current_user), id: "make_another_search" %></h5>

</div>

